{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,

    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
  },

}